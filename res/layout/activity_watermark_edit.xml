<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="@dimen/miuix_appcompat_action_bar_default_height" android:paddingStart="@dimen/miuix_appcompat_action_bar_horizontal_padding_start" android:paddingEnd="@dimen/miuix_appcompat_action_bar_horizontal_padding_end">
        <ImageButton android:layout_gravity="start|center" android:id="@id/button_close" android:background="@drawable/menu_button_discard_n_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/close" />
        <TextView android:textSize="@dimen/privacy_watermark_edit_title_text_size" android:textStyle="bold" android:ellipsize="marquee" android:layout_gravity="center" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/privacy_watermark_edit_page_title_max_width" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever" android:textAlignment="center" />
        <ImageButton android:layout_gravity="end|center" android:id="@id/button_save" android:background="@drawable/menu_button_save_n_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/user_define_watermark_save" />
    </FrameLayout>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingHorizontal="@dimen/privacy_watermark_edit_text_horizontal_padding" android:paddingVertical="@dimen/privacy_watermark_edit_text_vertical_padding">
        <EditText android:layout_gravity="center" android:id="@id/edit_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="text" android:imeOptions="actionDone" android:paddingEnd="@dimen/watermark_count_view_width" android:fallbackLineSpacing="false" />
        <TextView android:textSize="@dimen/watermark_summer_text_size" android:textColor="@color/watermark_summer_text_color" android:gravity="center" android:layout_gravity="end|center" android:id="@id/count_tip" android:clickable="true" android:layout_width="@dimen/watermark_count_view_width" android:layout_height="wrap_content" />
    </FrameLayout>
    <TextView android:textSize="@dimen/privacy_watermark_edit_history_label_text_size" android:textColor="@color/pref_privacy_watermark_edit_history" android:id="@id/history_label" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/pref_privacy_watermark_edit_history" android:paddingHorizontal="@dimen/privacy_watermark_edit_text_horizontal_padding" android:paddingVertical="@dimen/privacy_watermark_edit_text_vertical_padding" />
    <androidx.core.widget.NestedScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView android:id="@id/history_list_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:overScrollMode="never" />
            <TextView android:textSize="@dimen/privacy_watermark_edit_history_item_text_size" android:textStyle="bold" android:textColor="@color/pref_privacy_watermark_edit_clear_history" android:id="@id/button_clear_history" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/pref_privacy_watermark_edit_clear_history" android:paddingHorizontal="@dimen/privacy_watermark_edit_text_horizontal_padding" android:paddingVertical="@dimen/privacy_watermark_edit_text_vertical_padding" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>