<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/gallery_content" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <androidx.recyclerview.widget.RecyclerView android:id="@id/list_item_recycler" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layoutDirection="ltr" />
    </FrameLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@id/gallery_tips" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginHorizontal="@dimen/gallery_tips_margin_horizontal">
        <TextView android:textSize="@dimen/gallery_tips_text_size_large" android:textColor="@color/text_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gallery_title" />
        <TextView android:textSize="@dimen/gallery_tips_text_size_small" android:textColor="@color/text_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/gallery_tips_small_top_margin" android:text="@string/gallery_description" />
    </LinearLayout>
</FrameLayout>